{
    "compilerOptions": {
        "jsx": "react",
        "removeComments": true,
        "preserveConstEnums": true,
        "noImplicitAny": true,
        "module": "es6",
        "moduleResolution": "node",
        "target": "es2015",
        "strictNullChecks": true,
        "allowSyntheticDefaultImports": true,
        "alwaysStrict": true,
        "declaration": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDeclarationOnly": true
    },
    "include": ["src/**/*"]
}